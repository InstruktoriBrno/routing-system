{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "duration": {
            "type": "integer"
        },
        "routers": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "description": "Default assignment of pipaky to Router labels. Any pipak can assume any Label (for redundancy purposes). These values are defaults, so we don't need to update each of them manually pre-game.",
                "properties": {
                    "mac": {
                        "type": "array",
                        "description": "List of MAC addresses of all routers that will assume this logical address"
                    }
                }
            }
        },
        "links": {
            "type": "array",
            "description": "List of all links in the network. The links are bi-directional. Only one of the directions is listed here.",
            "items": [
                {
                    "type": "string",
                    "description": "String of exactly two Router label chars."
                }
            ]
        },
        "packets": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "type": {
                        "enum": [
                            "admin",
                            "standard",
                            "priority",
                            "hopper",
                            "visitall",
                            "locator"
                        ]
                    },
                    "releaseTime": {
                        "type": "integer",
                        "description": "Gametime when this packet should be released. Not enforced, value is for itinerary generator tool"
                    },
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "points": {
                        "type": "integer"
                    },
                    "pointsPerMinuteLeft": {
                        "type": "integer"
                    },
                    "minutesToDeliver": {
                        "type": "integer"
                    },
                    "pointsPerHop": {
                        "type": "integer"
                    }
                },
                "required": [
                    "type",
                    "releaseTime",
                    "source"
                ],
                "additionalProperties": false
            }
        },
        "events": {
            "type": "array",
            "description": "Pre-planned network events that will happen during game",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "linkdown",
                                "linkup"
                            ]
                        },
                        "time": {
                            "type": "integer",
                            "description": "When should the event take place, in seconds from game start"
                        },
                        "link": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "time",
                        "link"
                    ]
                }
            ]
        }
    },
    "required": [
        "duration",
        "routers",
        "links",
        "packets",
        "events"
    ],
    "additionalProperties": false
}
