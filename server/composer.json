{
    "name": "routing-game/server",
    "description": "Webserver handling the routing game",
    "homepage": "https://routing.instruktori.cz/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ondrej Bouda",
            "email": "obouda@email.cz",
            "homepage": "https://github.com/ondrej-bouda"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.8",
        "ondrej-bouda/ivory": "~0.2",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "swaggest/json-schema": "~0.12",
        "symfony/console": "^7.1"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
